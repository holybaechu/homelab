{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "schedule": ["* 19-20 * * *"],
    "timezone": "Asia/Seoul",
    "packageRules": [
        {
            "matchPackageNames": ["lscr.io/linuxserver/qbittorrent"],
            "allowedVersions": ["<14.0.0"]
        }
    ],
    "argocd": {
        "managerFilePatterns": [
            "/\\.yaml$/"
        ]
    },
    "kubernetes": {
        "managerFilePatterns": [
            "/\\.yaml$/"
        ]
    }
}