{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":dependencyDashboard",
        ":automergeMinor"
    ],
    "schedule": [
        "* 0-23 * * *"
    ],
    "timezone": "Asia/Seoul",
    "packageRules": [
        {
            "matchPackageNames": [
                "lscr.io/linuxserver/qbittorrent"
            ],
            "allowedVersions": "<14.0.0"
        }
    ],
    "argocd": {
        "managerFilePatterns": [
            "/\\.yaml$/"
        ]
    },
    "kubernetes": {
        "managerFilePatterns": [
            "/\\.yaml$/"
        ]
    },
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/(^|/)kustomization\\.ya?ml$/"
            ],
            "matchStrings": [
                "https://raw\\.githubusercontent\\.com/(?<depName>[^/]*/[^/]*)/(?<currentValue>.*?)/"
            ],
            "datasourceTemplate": "github-tags"
        }
    ]
}
